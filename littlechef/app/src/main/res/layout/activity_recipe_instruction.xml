<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/header_footer_background"
    tools:context=".presentation.RecipeInstructionActivity">

    <TextView
        android:id="@+id/instruction_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:text="@string/instructions"
        android:textColor="@color/black"
        android:textSize="25sp" />

    <ListView
        android:id="@+id/instruction_list_view"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_below="@id/instruction_header"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:divider="@null" >
    </ListView>

    <Button
        android:id="@+id/stop_cooking"
        android:layout_width="280dp"
        android:layout_marginTop="10dp"
        android:layout_height="60dp"
        android:layout_below="@id/instruction_list_view"
        android:background="@drawable/round_button"
        android:theme="@style/buttonWhiteTheme"
        android:layout_centerHorizontal="true"
        android:text="@string/stop_cooking"
        android:textColor="@color/black"
        android:textSize="25sp" />

</RelativeLayout>