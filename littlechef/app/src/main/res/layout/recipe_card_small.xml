        android:layout_marginBottom="100dp"
        android:gravity="start"
        android:text="@string/recipe_card_name_placeholder"
        android:textColor="@color/recipe_name_text"
        android:textSize="20sp"
        tools:ignore="RtlHardcoded" />


</RelativeLayout>