<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    android:orientation="horizontal"
    android:background="@color/recipe_card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@color/header_footer_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="70dp"
            android:includeFontPadding="false"
            android:text="@string/recipe_card_name_placeholder"
            android:textColor="@color/recipe_name_text"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/estimatedTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/from_left"
            android:layout_marginTop="-70dp"
            android:gravity="left"
            android:includeFontPadding="false"
            android:text="@string/time"
            android:textColor="@color/recipe_info_text"
            android:textSize="@dimen/small_text" />

        <TextView
            android:id="@+id/difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/from_left"
            android:layout_marginTop="0dp"
            android:gravity="left"
            android:text="@string/difficulty"
            android:textColor="@color/recipe_info_text"
            android:textSize="@dimen/small_text" />

        <TextView
            android:id="@+id/taste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/from_left"
            android:layout_marginTop="0dp"
            android:gravity="left"
            android:text="@string/taste"
            android:textColor="@color/recipe_info_text"
            android:textSize="@dimen/small_text" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/from_left"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:gravity="left"
            android:text="Rating:"
            android:textColor="@color/recipe_info_text"
            android:textSize="@dimen/small_text" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/from_left"
        android:layout_marginTop="250dp"
        android:layout_marginBottom="70dp"
        android:gravity="left"
        android:includeFontPadding="false"
        android:text="Ingredients"
        android:textColor="@color/recipe_name_text"
        android:textSize="25dp" />


    <ListView
        android:id="@+id/ingredients_list"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="280dp"
        android:drawSelectorOnTop="true"/>
    

    <Button
        android:id="@+id/startCooking"
        android:layout_width="192dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="194dp"
        android:layout_marginBottom="51dp"
        android:text="START COOKING"
        android:textColor="@color/recipe_name_text"
        android:textSize="18dp" />



</RelativeLayout>