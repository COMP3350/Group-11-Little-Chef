<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:noHistory="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustResize">

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

         <TextView
            android:id="@+id/workingRecipeName"
            android:layout_width="550dp"
            android:layout_height="wrap_content"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/round_button"
            android:backgroundTintMode="@color/white"
            android:text="X"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>


    <EditText
        android:id="@+id/ingredientName"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:hint="Ingredient name"
        android:inputType="text" />

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/ingredientAmount"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginBottom="50dp"
            android:digits="0123456789.,"
            android:ems="10"
            android:hint="Ingredient amount (1 serving)"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/spinnerUnit"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_marginStart="25dp"></Spinner>

    </LinearLayout>


    <Button
        android:id="@+id/addIngredientButton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:background="@drawable/round_button"
        android:text="Add Ingredient"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <Button
        android:id="@+id/addInstructionButton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/round_button"
        android:text="Finish adding ingredients"
        android:textColor="@color/black"
        android:textSize="15sp" />


</LinearLayout>