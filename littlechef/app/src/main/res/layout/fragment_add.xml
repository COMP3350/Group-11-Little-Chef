<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- TODO: MAKE NICER -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start new Recipe " />

        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Recipe Name"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/startIngredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start ingredients" />

        <TextView
            android:id="@+id/textViewIngred"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add an Ingredient to Recipe " />

        <EditText
            android:id="@+id/ingredName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingredient Name"
            android:inputType="text" />

        <EditText
            android:id="@+id/ingredMeasurement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingredient measurement"
            android:inputType="text" />

        <EditText
            android:id="@+id/ingredAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ingredient measurement amount"
            android:inputType="number" />

        <Button
            android:id="@+id/ingredButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Ingredient!" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="600dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert Recipe to list" />

    </LinearLayout>

</FrameLayout>